#!usr/local/bin/perl

# Print Menu
print_menu();

# Get user input
get_usr_input();

# Subroutines
sub get_usr_input {
	printf("input> ");
	$result = <STDIN>;
	chomp $result;
	if ( $result == "1" ) {
		print_menu();
		get_usr_input();
	}
	elsif ( $result == "2" ) {
		printf("Help is coming soon!");
		get_usr_input();
	}
	elsif ( $result == "3" ) {
		my $username = $ENV{LOGNAME} || $ENV{USER} || getpwuid($<);
		printf( "Current user: " + $username );
		get_usr_input();
	}
	elsif ( $result == "4" ) {
		printf("1) add(x,y) -> r=x+y\n2) sub(x,y) -> r=x-y");
		printf("\ninput/examples> ");
		$answer = <STDIN>;
		if ( $answer == "1" ) {
			
			printf("\n");
		}
		elsif ( $answer == "2" ) {

			printf("\n");
		}
		else {
			printf("Wrong input.\n");
		}
		get_usr_input();
	}
	elsif ( $result == "5" ) {
		printf("Help is coming soon!");
		get_usr_input();
	}
	else {
		printf("Wrong input.\n");
		get_usr_input();
	}
}

sub print_menu {
	printf("\n");
	printf("##########################################\n");
	printf("############ PERL INPUT TEST #############\n");
	printf("##########################################\n");
	printf("#### COMMANDS                         ####\n");
	printf("####                                  ####\n");
	printf("#### 1)Main menu                      ####\n");
	printf("#### 2)Help                           ####\n");
	printf("#### 3)User                           ####\n");
	printf("#### 4)PERL Examples                  ####\n");
	printf("#### 5)Exit                           ####\n");
	printf("##########################################\n");
}
