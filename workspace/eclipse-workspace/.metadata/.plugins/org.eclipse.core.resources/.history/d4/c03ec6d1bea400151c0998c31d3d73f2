#include "lib/Examples.hpp"
#include "lib/includes.h"

using namespace std;

void printMenu() {
	printf("\n");
	printf("##########################################\n");
	printf("############# C++ INPUT TEST #############\n");
	printf("##########################################\n");
	printf("#### COMMANDS                         ####\n");
	printf("####                                  ####\n");
	printf("#### 1)Main menu                      ####\n");
	printf("#### 2)Help                           ####\n");
	printf("#### 3)User                           ####\n");
	printf("#### 4)C++ Examples                   ####\n");
	printf("#### 5)Exit                           ####\n");
	printf("##########################################\n");

}

void readUsrInput() {



	printf("input> ");
	char r2, r1, r = getchar();
	switch (r) {
	case '1':
		printMenu();
		readUsrInput();
		break;
	case '2':
		printf("Help is coming soon!\n");
		readUsrInput();
		break;
	case '3':
		system("whoami && hostname");
		readUsrInput();
		break;
	case '4':
		Examples ex1;

		printf("1) add(x,y) -> r=x+y\n2) sub(x,y) -> r=x-y\ninput/examples> ");
		r2 = getchar();
		if (r2 == '1')
			printf("%s %d", "\nr=", ex1.add());
		else if (r2 == '2')
			printf("%s %d", "\nr=", ex1.sub());
		else
			printf("Wrong input.\n");
		printf("\n");
		readUsrInput();
		break;
	case 5:
		printf("Terminating...\n");
		r1 = getchar();
		printf("Are you sure you want to exit? y/n\ninput/exit> ");
		if (r1 == 'y' || r1 == 'Y') {
			printf("Exiting...\n");
			exit(0);
		} else {
			printf("Aborted...\n");
			readUsrInput();
		}
		break;
	default:
		printf("Wrong input.\n");
		readUsrInput();
		break;
	}
}

int main() {
	// Print menu
	printMenu();

	// Init Input
	readUsrInput();

	return 0;

}

